<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>

    <meta name="keywords" content="<% @seo_keywords %>" >

    <%= stylesheet_link_tag    'products', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- Start of Nav -->
    <%= render 'shared/product_nav' %>
    <!-- End of Nav -->

    <!-- Start of Jumbotron -->
    <%= render 'shared/product_jumbotron' %>
    <!-- End of Jumbotron -->

    <!-- Start of album, container and row elements -->
    <div class="album text-muted">
      <div class="container">
          <%= login_helper %>

          <%= yield %>

          <!-- Start of footer -->
          <%= render 'shared/product_footer' %>
          <!-- End of footer -->

          <%= source_helper("application") %>
        <div class="row">
        </div>
      </div>
    </div>
    <!-- End of album, container and row elements -->

    
  </body>
</html>
